{
  "name": "html-to-png-converter",
  "version": "1.0.0",
  "description": "高清HTML转PNG转换工具",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test.js",
    "test-cards": "node test-split-cards.js",
    "electron": "electron .",
    "electron-test": "electron electron-test.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3003 && electron .\"",
    "build-win": "electron-builder --win",
    "build": "npm run build-win",
    "dist": "electron-builder"
  },
  "keywords": [
    "html",
    "png",
    "converter",
    "puppeteer"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^21.5.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.htmltopng.converter",
    "productName": "HTML转PNG转换器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/puppeteer/.local-chromium/**",
      "!dist/**",
      "!*.md",
      "!docker*",
      "!test.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HTML转PNG转换器"
    },
    "extraResources": [
      {
        "from": "node_modules/puppeteer/.local-chromium",
        "to": "chromium"
      }
    ]
  }
}
